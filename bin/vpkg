#!/usr/bin/env bash
#
# vpkg
#

# go to own dir
cd "$(dirname $BASH_SOURCE)"

# vars
cmd="$1"
args="${@:2}"

# include vpkg function library
source ../lib/functions

# run
case "$cmd" in
  "install")
    vpkg-install "$args"
    ;;
  "uninstall")
    vpkg-uninstall "$args"
    ;;
  "link")
    vpkg-link "$args"
    ;;
  "unlink")
    vpkg-unlink "$args"
    ;;
  "-v"|"--version"|"version")
    vpkg-version
    ;;
  *)
    echo "$cmd: command not found" >&2 && exit 1
    ;;
esac