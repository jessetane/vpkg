#
# vpkg
#

# go to own dir
cd "$(dirname $BASH_SOURCE)"

# include vpkg function library
source ../lib/functions

# run
case "$1" in
  "install" )
    vpkg_install "${@:2}"
    ;;
  "uninstall" )
    vpkg_uninstall "${@:2}"
    ;;
  "link" )
    vpkg_link "${@:2}"
    ;;
  "unlink" )
    vpkg_unlink "${@:2}"
    ;;
  "-v"|"--version"|"version" )
    vpkg_version
    ;;
  * )
    echo "$1: command not found" >&2 && exit 1
    ;;
esac