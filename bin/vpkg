#!/usr/bin/env bash
#
# vpkg
#

# go to own dir
cd "$(dirname $BASH_SOURCE)"

# include vpkg function library
source ../lib/functions

# run
case "$1" in
  "install")
    vpkg-install "${@:2}"
    ;;
  "uninstall")
    vpkg-uninstall "${@:2}"
    ;;
  "link")
    vpkg-link "${@:2}"
    ;;
  "unlink")
    vpkg-unlink "${@:2}"
    ;;
  "-v"|"--version"|"version")
    vpkg-version
    ;;
  *)
    echo "$1: command not found" >&2 && exit 1
    ;;
esac