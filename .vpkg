#
# .vpkg
#

url() {
  echo "https://github.com/jessetane/vpkg"
}

version() {
  echo "testing"
}

pre_build() {
  
  # checkout code
  git fetch --all
  git fetch --tags
  
  # install
  mkdir -p "$lib"/"$build"
  cd "$lib"/"$build"
  cp -R "$src"/.git ./
  git reset --hard "$version"
  
  # inform vpkg that we handled the build ourselves
  echo "$lib"/"$build"
}

bootstrap() {
  
  # vars
  [ -z "$SOURCE" ] && SOURCE="https://github.com/jessetane"
  VPKG_HOME="$(pwd)"
  name="vpkg"
  build="default"
  version="$(version)"
  bin="$VPKG_HOME"/bin
  src="$VPKG_HOME"/src/"$name"
  lib="$VPKG_HOME"/lib/"$name"
  
  # sanity
  [ -e "$lib"/default ] && echo "$VPKG_HOME: vpkg appears to already be installed here" >&2 && return 1
  
  # are you sure?
  {
    echo "---- welcome to vpkg ----"
    echo "you are about to bootstrap vpkg into $VPKG_HOME"
    read -a proceed -p "are you sure? [Y/n]: "
    if [ "$proceed" = "n" ] || [ "$proceed" = "N" ]
    then
      echo "vpkg bootstrap aborted" >&2
      return 1
    fi
  }
  
  # make some dirs
  mkdir -p "$src"
  mkdir -p "$bin"
  cd "$src"
  
  # autogenerate a sourceable profile
  # file and put it in VPKG_HOME
  profile > "$VPKG_HOME"/.vpkgrc
  
  # install dependency: argue
  git clone "$SOURCE/argue" "$VPKG_HOME"/src/argue
  ln -s "$VPKG_HOME"/src/argue/bin/libargue.sh "$VPKG_HOME"/bin/
  
  # install self
  git clone "$SOURCE/vpkg" "$VPKG_HOME"/src/vpkg
  git reset --hard "$version"
  ln -s "$VPKG_HOME"/src/vpkg/bin/libvpkg.sh "$VPKG_HOME"/bin/
  ln -s "$VPKG_HOME"/src/vpkg/bin/vpkg.sh "$VPKG_HOME"/bin/
  
  # source profile
  . "$VPKG_HOME"/.vpkgrc
  
  # now we are self hosted, so do proper installation
  vpkg install argue
  vpkg install vpkg
}

profile() {
  echo -n '#
# .vpkgrc - source this
#

# vpkg root
export VPKG_HOME="'"$VPKG_HOME"'"

# vpkg registries - add as many urls as you like, seperated by newlines
export VPKG_REGISTRIES="file://${VPKG_HOME}/src/vpkg/test/fixtures/registry.sample"

# add bin to PATH
export PATH="$VPKG_HOME"/bin:"$PATH"

# source vpkg command
. vpkg.sh
'
}

# bootstrap?
[ -z "$VPKG_HOME" ] && bootstrap
