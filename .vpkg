#
# .vpkg
#

url() {
  echo "https://github.com/jessetane/vpkg"
}

version() {
  echo "testing"
}

install() {
  mkdir -p "$src" && cd $_
  
  # get repo
  [ ! -d .git ] && git clone "$(url)" ./
  
  # checkout code
  git fetch --all
  git fetch --tags
  
  # install
  mkdir -p "$lib"/"$build" && cd $_
  cp -R "$src"/.git ./
  git reset --hard "$version"
}

bootstrap() {
  
  # vars
  name="vpkg"
  build="default"
  version="$(version)"
  bin="$VPKG_HOME"/bin
  src="$VPKG_HOME"/src/"$name"
  lib="$VPKG_HOME"/lib/"$name"
  
  # sanity
  [ -z "$VPKG_HOME" ] && echo "VPKG_HOME is not defined" >&2 && return 1
  [ -e "$lib"/default ] && echo "$VPKG_HOME: vpkg appears to already be installed here" >&2 && return 1
  
  # make some dirs
  mkdir -p "$src" && cd $_
  mkdir -p "$bin"
  
  # autogenerate a sourceable profile
  # file and put it in VPKG_HOME
  profile > "$VPKG_HOME"/.vpkgrc
  
  # install dependency: argue
  git clone "https://github.com/jessetane/argue" "$VPKG_HOME"/src/argue
  ln -s "$VPKG_HOME"/src/argue/bin/libargue.sh "$VPKG_HOME"/bin/
  
  # install self
  git clone "https://github.com/jessetane/vpkg" "$VPKG_HOME"/src/vpkg
  git reset --hard "$version"
  ln -s "$VPKG_HOME"/src/vpkg/bin/libvpkg.sh "$VPKG_HOME"/bin/
  ln -s "$VPKG_HOME"/src/vpkg/bin/vpkg.sh "$VPKG_HOME"/bin/
  
  # source profile
  . "$VPKG_HOME"/.vpkgrc
  
  # now we are self hosted, so do proper installation
  vpkg install argue
  vpkg install vpkg
}

profile() {
  echo -n '#
# .vpkgrc - source this
#

# vpkg root
export VPKG_HOME="'"$VPKG_HOME"'"

# vpkg registries - add as many urls as you like, seperated by newlines
export VPKG_REGISTRIES="file://${VPKG_HOME}/src/vpkg/test/fixtures/registry.sample"

# add bin to PATH
export PATH="$VPKG_HOME"/bin:"$PATH"

# source vpkg command
. vpkg.sh
'
}

# run or bootstrap
if [ -n "$1" ]
then
  "$1"
else
  bootstrap
fi
